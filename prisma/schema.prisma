generator client {
  provider = "prisma-client-js"
    // Generate client to a different location to avoid the problematic `.prisma` path
  // `.prisma` paths cause issues with ESM imports in Node.js
  output   = "../node_modules/@prisma/client-generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password? @relation("UserToPassword")
  room     Room?     @relation("RoomToUser")
}

model Password {
  id     String @id @default(cuid())
  hash   String
  salt   String
  userId String @unique
  user   User   @relation("UserToPassword", fields: [userId], references: [id], onDelete: Cascade)
}

model Room {
  id      String @id @default(cuid())
  name    String
  code    String @unique
  owner   User   @relation("RoomToUser", fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String @unique
}

